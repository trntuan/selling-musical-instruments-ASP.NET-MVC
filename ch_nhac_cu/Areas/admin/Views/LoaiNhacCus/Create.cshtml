@model ch_nhac_cu.Models.LoaiNhacCu

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "LoaiNhacCus", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header justify-content-center">
            <h4 class="modal-title"><b>THÊM LOẠI NHẠC CỤ</b></h4>
        </div>
        <div class="modal-body">
            <div class="form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaLoaiNC, "Mã nhạc cụ", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.MaLoaiNC, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaLoaiNC, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiNC, "Tên nhạc cụ", htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.TenLoaiNC, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiNC)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AnhLoaiNC,"Ảnh loại nhạc cụ", htmlAttributes: new { @class = "" })
                            <input type="file" class="form-control" name="AnhLoaiNC" accept="image/*" required>
                            @Html.ValidationMessageFor(model => model.AnhLoaiNC, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary submit-btn m-r-10" })
                    <input type="submit" value="Thêm" class="btn btn-success submit-btn" />
                </div>
            </div>
        </div>
    </div>
}
