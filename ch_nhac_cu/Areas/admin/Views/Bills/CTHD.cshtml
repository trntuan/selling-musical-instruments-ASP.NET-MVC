@model IEnumerable<ch_nhac_cu.Models.CTHoaDon>

@{
    ViewBag.Title = "CTHD";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0;
}
<script type="text/javascript" src="~/Content/userAssets/js/paginate.js"></script>
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Chi tiết hóa đơn </h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Hóa đơn</a></li>
                    <li class="breadcrumb-item active">Chi tiết hóa đơn</li>
                </ul>
            </div>
            <div class="col-auto float-right ml-auto">
                <a href="@Url.Action("Create", "CTHoaDons")" class="btn add-btn"><i class="fa fa-plus"></i> Thêm chi tiết hóa đơn</a>
            </div>
        </div>
    </div>
    <div class="row filter-row justify-content-center ">
        <div class="col-sm-6 col-md-3 col-lg-3 col-xl-4 col-12">
            <div class="form-group ">
                <input class="form-control" type="search" id="searchBox" placeholder="Tìm kiếm bất kỳ...">
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table  table-striped custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã hóa đơn</th>
                            <th>Tên nhạc cụ</th>
                            <th>Số lượng bán</th>
                            <th>Đơn giá bán</th>
                            <th class="text-right no-sort underload">Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{ i++;}
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaHD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NhacCu.TenNC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuongBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonGiaBan)
                                </td>

                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.MaHD })"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="dropdown-item" href="@Url.Action("Details", new { id = item.MaHD })"><i class="fa fa-eye m-r-5"></i> View</a>
                                            <a class="dropdown-item" href="@Url.Action("Delete", new { id = item.MaHD })"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<script>
    let options = {
        numberPerPage: 100,
        goBar: false,
        pageCounter: false,
    };

    let filterOptions = {
        el: '#searchBox'
    };

    paginate.init('.myTable', options, filterOptions);
</script>
